<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <EditTextPreference
        android:defaultValue=" "
        android:key="user_name"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Username"
        android:summary="Please enter your name" />

    <ListPreference
        android:key="Type of white noise"
        android:title="White noise"
        android:summary="You can choose your favourite white noise"
        android:entries="@array/noise_entries" android:entryValues="@array/noise_values" />

    <Preference
        android:key="timer"
        android:title="White Noise Timer"
        android:summary="You can change the length of  white noise"/>

</PreferenceScreen>